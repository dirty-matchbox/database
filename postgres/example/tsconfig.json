{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@dirty-matchbox/database": ["../../dist"],
      "@dirty-matchbox/database/*": ["../../dist/*"],
    },
    "outDir": "./dist",
  },
  "include": ["./index.ts", "./src/**/*", "./config/**/*", "./migrations/**/*"],
  "exclude": ["node_modules", "./src/**/tests/**", "./src/**/dist/**"],
  "emitDecoratorMetadata": true,
  "allowSyntheticDefaultImports": false,
  "target": "ES2020",
  "module": "commonjs",
  "strict": true,
  "isolatedModules": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "outDir": "dist",
  "noEmit": true,
  "paths": {
    "*": ["./*.d.ts"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
}
